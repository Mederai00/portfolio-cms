{% extends 'base.html.twig' %}

{% block title %}Blog index
{% endblock %}

{% block body %}
	<section class="ftco-section bg-light" id="skills-section">
		<div class="container">
			<h1>Blog index</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Date</th>
						<th>Contenu</th>
						<th>Banner</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for blog in blogs %}
						<tr>
							<td>{{ blog.id }}</td>
							<td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
							<td>{{ blog.contenu }}</td>
							<td>{{ blog.banner }}</td>
							<td>
								<a href="{{ path('blog_show', {'id': blog.id}) }}">show</a>
								<a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('blog_new') }}">Create new</a>
		</div>
	</section>
{% endblock %}
