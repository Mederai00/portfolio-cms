{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block body %}
	{% include 'admin-nav.html.twig' %}
	<section class="ftco-section bg-light">
		<div class="container">
			<h1>Blog</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ blog.id }}</td>
					</tr>
					<tr>
						<th>Date</th>
						<td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
					</tr>
					<tr>
						<th>Contenu</th>
						<td></td>
					</tr>
					<tr>
						<th>Banner</th>
						<td>{{ blog.titre }}</td>
					</tr>
				</tbody>
			</table>
			<div>
				{{ blog.description|raw }}
			</div>

			<a href="{{ path('blog_index') }}">back to list</a>

			<a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

			{{ include('blog/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
