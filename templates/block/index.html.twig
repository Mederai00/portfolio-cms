{% extends 'base.html.twig' %}

{% block title %}Block index
{% endblock %}

{% block body %}
	<section class="ftco-section bg-light" id="skills-section">
		<div class="container">
			<h1>Block index</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>Image</th>
						<th>Description</th>
						<th>Button</th>
						<th>Poucentage</th>
						<th>Type</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for block in blocks %}
						<tr>
							<td>{{ block.id }}</td>
							<td>{{ block.titre }}</td>
							<td>{{ block.image }}</td>
							<td>{{ block.description }}</td>
							<td>{{ block.button }}</td>
							<td>{{ block.poucentage }}</td>
							<td>{{ block.type }}</td>
							<td>
								<a href="{{ path('block_show', {'id': block.id}) }}" class=" btn btn-secondary">show</a>
								<a href="{{ path('block_edit', {'id': block.id}) }}" class=" btn btn-dark btn-sm">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('block_new') }}" class=" btn btn-outline btn-primary mt-2">Create new</a>
		</div>
	</section>
{% endblock %}
