{% extends 'base.html.twig' %}

{% block title %}Block
{% endblock %}

{% block body %}
	<section class="ftco-section bg-light" id="skills-section">
		<div class="container">
			<h1>Block</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ block.id }}</td>
					</tr>
					<tr>
						<th>Titre</th>
						<td>{{ block.titre }}</td>
					</tr>
					<tr>
						<th>Image</th>
						<td>{{ block.image }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ block.description }}</td>
					</tr>
					<tr>
						<th>Button</th>
						<td>{{ block.button }}</td>
					</tr>
					<tr>
						<th>Poucentage</th>
						<td>{{ block.poucentage }}</td>
					</tr>
					<tr>
						<th>Type</th>
						<td>{{ block.type }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('block_index') }}">back to list</a>

			<a href="{{ path('block_edit', {'id': block.id}) }}">edit</a>

			{{ include('block/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
