{% extends 'base.html.twig' %}

{% block title %}Section index
{% endblock %}

{% block body %}
	{% include 'admin-nav.html.twig' %}
	<section class="ftco-section bg-light">
		<div class="container">
			<h1>Section index</h1>
			<table class="table" id="dtb1">
				<thead>
					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>SousTitre</th>
						<th>Type</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for section in sections %}
						<tr>
							<td>{{ section.id }}</td>
							<td>{{ section.titre }}</td>
							<td>{{ section.sousTitre }}</td>
							<td>{{ section.type }}</td>
							<td>
								<a href="{{ path('section_show', {'id': section.id}) }}" class=" btn btn-secondary btn-sm">show</a>
								<a href="{{ path('section_edit', {'id': section.id}) }}" class=" btn btn-outline btn-dark btn-sm">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('section_new') }}" class=" btn btn-outline btn-primary mt-2">Create new</a>
		</div>
	</section>
	<script>
		$(document).ready(function () {
$('#dtb1').DataTable();
});
	</script>

{% endblock %}
